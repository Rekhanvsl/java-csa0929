public class Main {
    public static void main(String[] args) {
        int loop1_value = 10;
        int loop2_value = 15;
        int loop3_value = 12;
        if (loop1_value > loop2_value) {
            if (loop1_value > loop3_value) {
                System.out.println("Loop 1 contains the greatest value");
            } else {
                System.out.println("Loop 3 contains the greatest value");
            }
        } else if (loop2_value > loop3_value) {
            System.out.println("Loop 2 contains the greatest value");
        } else {
            System.out.println("Loop 3 contains the greatest value");
        }
    }
}
